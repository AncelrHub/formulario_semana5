{
  "name": "fastify-js-postgres",
  "version": "1.0.0",
  "description": "Backend Fastify (JS) + PostgreSQL + Docker",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "migrate": "node-pg-migrate --migrations-dir ./migrations --database-url postgres://$DB_USER:$DB_PASSWORD@$DB_HOST:$DB_PORT/$DB_NAME"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.2",
    "@fastify/formbody": "^7.4.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "node-pg-migrate": "^7.6.2",
    "pg": "^8.12.0",
    "pg-migrate": "^2.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
